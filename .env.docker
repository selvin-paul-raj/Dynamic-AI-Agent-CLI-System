# Dynamic AI Agent - Docker Environment Configuration
# Copy this file to .env for Docker Compose

# === Required API Keys ===
GOOGLE_API_KEY=your_google_api_key_here
SERPER_API_KEY=your_serper_api_key_here

# === Optional: LangChain Observability ===
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=dynamic-ai-agent-docker

# === Container Configuration ===
# Set to true to run setup on container start
RUN_SETUP=false
# Set to true to skip configuration validation
SKIP_VALIDATION=false
# Set to true to exit on validation failure
STRICT_VALIDATION=false
# Set to true to run tests on startup
RUN_TESTS=false
# Set to true to generate diagrams on startup
GENERATE_DIAGRAMS=true

# === Agent Configuration ===
AGENT_DEFAULT_FLOW=llm
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=30

# === Search Configuration ===
SEARCH_MAX_RESULTS=10
SEARCH_SAFE_MODE=true
SEARCH_CACHE_TTL=3600

# === LLM Configuration ===
LLM_MODEL=gemini-2.0-flash-lite
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# === Math Configuration ===
MATH_PRECISION=10
MATH_MAX_OPERANDS=100

# === Logging & Monitoring ===
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=false
METRICS_PORT=8080

# === Development Settings ===
DEBUG=false
DEVELOPMENT_MODE=false

# === Docker Specific ===
# Compose profiles to enable optional services
COMPOSE_PROFILES=
# Options: dev, cache, monitoring
# Example: COMPOSE_PROFILES=dev,cache
