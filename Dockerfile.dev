# Dynamic AI Agent CLI System - Development Dockerfile
# Optimized for development with hot reload and debugging

FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH="/app" \
    DEBUG=true \
    DEVELOPMENT_MODE=true

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    graphviz \
    graphviz-dev \
    pkg-config \
    vim \
    nano \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Install uv for faster dependency management
RUN pip install uv

# Set work directory
WORKDIR /app

# Copy dependency files
COPY requirements-dev.txt requirements.txt ./

# Install all dependencies including dev dependencies
RUN pip install -r requirements-dev.txt

# Copy application code (for development, use volume mount instead)
COPY . .

# Create necessary directories
RUN mkdir -p diagrams public logs data .pytest_cache

# Expose ports
EXPOSE 8080 5555

# Default command for development
CMD ["python", "main.py", "interactive"]
